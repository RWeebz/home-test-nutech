# Application Configuration
APP_PORT=3000
APP_HOST=localhost

# Logging Configuration
# Levels: error, warn, info, http, verbose, debug, silly
APP_LOG_LEVEL=info

# Authentication Configuration
# JWT Secret for HMAC-SHA256 signing (keep this secret!)
APP_JWT_SECRET=
# Bcrypt salt rounds (10-12 recommended, higher = more secure but slower)
APP_BCRYPT_SALT_ROUNDS=

# S3 Configuration
APP_S3_REGION=
APP_S3_ACCESS_KEY_ID=
APP_S3_SECRET_KEY=
APP_S3_URL_API=
APP_S3_BUCKET_NAME=

# Base URL for API endpoints
APP_BASE_URL=

# PostgreSQL Configuration (for Docker)
DOCKER_POSTGRES_DB=db_name
DOCKER_POSTGRES_USER=db_user
DOCKER_POSTGRES_PASSWORD=db_password

# Database URL
APP_DATABASE_URL=postgres://db_user:db_password@postgres:5432/db_name